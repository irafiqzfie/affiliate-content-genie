/* Facebook & Threads Consent Modal Styles */

.consentModalOverlay {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  background: rgba(0, 0, 0, 0.75) !important;
  backdrop-filter: blur(8px) !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  z-index: 10000 !important;
  padding: 1rem !important;
  overflow-y: auto !important;
}

.consentModal {
  background: linear-gradient(135deg, rgba(13, 15, 27, 0.98), rgba(20, 25, 40, 0.98)) !important;
  border: 1px solid rgba(255, 255, 255, 0.2) !important;
  border-radius: 20px !important;
  max-width: 600px !important;
  width: 100% !important;
  max-height: 90vh !important;
  display: flex !important;
  flex-direction: column !important;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5) !important;
  animation: slideUp 0.3s ease-out !important;
  overflow: hidden !important;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.consentModalHeader {
  display: flex !important;
  flex-direction: column !important;
  align-items: stretch !important;
  padding: 1.5rem 2rem !important;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
  flex-shrink: 0 !important;
}

.brandingHeader {
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
  margin-bottom: 1rem !important;
}

.brandingLeft {
  display: flex !important;
  align-items: center !important;
  gap: 0.75rem !important;
}

.inabizLogo {
  font-size: 1.5rem !important;
  font-weight: 800 !important;
  background: linear-gradient(135deg, #f97316 0%, #3b82f6 100%) !important;
  -webkit-background-clip: text !important;
  background-clip: text !important;
  -webkit-text-fill-color: transparent !important;
}

.brandingDivider {
  width: 2px !important;
  height: 24px !important;
  background: rgba(255, 255, 255, 0.2) !important;
}

.platformBrand {
  display: flex !important;
  align-items: center !important;
  gap: 0.5rem !important;
  color: rgba(255, 255, 255, 0.9) !important;
  font-size: 1rem !important;
  font-weight: 600 !important;
}

.consentModalTitle {
  font-size: 1.5rem !important;
  font-weight: 700 !important;
  color: var(--primary-text-color) !important;
  margin: 0 0 0.5rem 0 !important;
}

.valueProposition {
  font-size: 0.95rem !important;
  color: rgba(255, 255, 255, 0.65) !important;
  line-height: 1.4 !important;
  margin: 0 !important;
}

.closeButton {
  background: rgba(255, 255, 255, 0.1) !important;
  border: none !important;
  width: 40px !important;
  height: 40px !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  color: var(--primary-text-color) !important;
  font-size: 1.5rem !important;
}

.closeButton:hover {
  background: rgba(255, 255, 255, 0.2) !important;
  transform: rotate(90deg) !important;
}

.consentModalContent {
  padding: 1.5rem 2rem !important;
  flex: 1 !important;
  overflow-y: auto !important;
  overflow-x: hidden !important;
  min-height: 0 !important;
}

.accordionSection {
  margin-bottom: 1rem !important;
  border: 1px solid rgba(255, 255, 255, 0.1) !important;
  border-radius: 12px !important;
  overflow: hidden !important;
  background: rgba(255, 255, 255, 0.02) !important;
  transition: all 0.3s ease !important;
}

.accordionSection:hover {
  border-color: rgba(255, 255, 255, 0.2) !important;
  background: rgba(255, 255, 255, 0.05) !important;
}

.accordionButton {
  width: 100% !important;
  padding: 1.25rem 1.5rem !important;
  background: transparent !important;
  border: none !important;
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
  cursor: pointer !important;
  color: var(--primary-text-color) !important;
  font-size: 1rem !important;
  font-weight: 600 !important;
  transition: all 0.2s ease !important;
  text-align: left !important;
}

.accordionButton:hover {
  background: rgba(255, 255, 255, 0.03) !important;
}

.accordionIcon {
  transition: transform 0.3s ease !important;
  color: var(--primary-color) !important;
  font-size: 1.25rem !important;
}

.accordionIcon.open {
  transform: rotate(180deg) !important;
}

.accordionContent {
  max-height: 0 !important;
  overflow: hidden !important;
  transition: max-height 0.3s ease-out !important;
}

.accordionContent.open {
  max-height: 2000px !important;
}

.accordionInner {
  padding: 0 1.5rem 1.25rem !important;
}

.whyWeNeed {
  background: rgba(139, 92, 246, 0.1) !important;
  border: 1px solid rgba(139, 92, 246, 0.3) !important;
  padding: 1rem !important;
  border-radius: 8px !important;
  margin-bottom: 1rem !important;
}

.whyWeNeedTitle {
  color: #a78bfa !important;
  font-weight: 600 !important;
  font-size: 0.95rem !important;
  margin-bottom: 0.5rem !important;
}

.whyWeNeedText {
  color: rgba(255, 255, 255, 0.8) !important;
  font-size: 0.9rem !important;
  line-height: 1.5 !important;
  margin: 0 !important;
}

.complianceGrid {
  display: grid !important;
  gap: 1rem !important;
  grid-template-columns: 1fr !important;
}

@media (min-width: 640px) {
  .complianceGrid {
    grid-template-columns: 1fr 1fr !important;
  }
}

.complianceCard {
  background: rgba(16, 185, 129, 0.1) !important;
  border: 1px solid rgba(16, 185, 129, 0.3) !important;
  padding: 1rem !important;
  border-radius: 8px !important;
}

.complianceTitle {
  color: #10b981 !important;
  font-weight: 600 !important;
  font-size: 0.9rem !important;
  margin-bottom: 0.5rem !important;
  display: flex !important;
  align-items: center !important;
  gap: 0.5rem !important;
}

.complianceList {
  list-style: none !important;
  padding: 0 !important;
  margin: 0 !important;
}

.complianceItem {
  color: rgba(255, 255, 255, 0.7) !important;
  font-size: 0.85rem !important;
  line-height: 1.6 !important;
  margin-bottom: 0.4rem !important;
  padding-left: 1.25rem !important;
  position: relative !important;
}

.complianceItem::before {
  content: "✓" !important;
  position: absolute !important;
  left: 0 !important;
  color: #10b981 !important;
  font-weight: bold !important;
}

.modalDescription {
  color: rgba(255, 255, 255, 0.7) !important;
  line-height: 1.6 !important;
  margin-bottom: 1.5rem !important;
}

.modalSection {
  margin-bottom: 1.5rem !important;
}

.sectionTitle {
  color: var(--primary-color) !important;
  font-size: 1.1rem !important;
  font-weight: 600 !important;
  margin-bottom: 0.75rem !important;
  display: flex !important;
  align-items: center !important;
  gap: 0.5rem !important;
}

.permissionList {
  list-style: none !important;
  padding: 0 !important;
  margin: 0 !important;
}

.permissionItem {
  background: rgba(255, 255, 255, 0.05) !important;
  padding: 0.75rem 1rem !important;
  margin-bottom: 0.5rem !important;
  border-radius: 8px !important;
  border-left: 3px solid var(--primary-color) !important;
}

.permissionName {
  font-weight: 600 !important;
  color: var(--primary-text-color) !important;
  margin-bottom: 0.25rem !important;
}

.permissionDesc {
  font-size: 0.9rem !important;
  color: rgba(255, 255, 255, 0.6) !important;
  margin: 0 !important;
}

.compactPermissionBox {
  background: rgba(16, 185, 129, 0.08) !important;
  border: 1px solid rgba(16, 185, 129, 0.25) !important;
  padding: 1rem 1.25rem !important;
  border-radius: 10px !important;
  margin-bottom: 1rem !important;
}

.compactPermissionBox ul {
  list-style: none !important;
  padding: 0 !important;
  margin: 0.5rem 0 0 0 !important;
}

.compactPermissionBox li {
  color: rgba(255, 255, 255, 0.8) !important;
  font-size: 0.9rem !important;
  line-height: 1.6 !important;
  margin-bottom: 0.5rem !important;
  padding-left: 1.5rem !important;
  position: relative !important;
}

.compactPermissionBox li::before {
  content: "✓" !important;
  position: absolute !important;
  left: 0 !important;
  color: #10b981 !important;
  font-weight: bold !important;
  font-size: 1.1rem !important;
}

.compactPermissionBox li:last-child {
  margin-bottom: 0 !important;
}

.consentModalFooter {
  padding: 1.5rem 2rem !important;
  display: flex !important;
  flex-direction: column !important;
  gap: 1rem !important;
  border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
  flex-shrink: 0 !important;
}

.inlineCheckbox {
  display: flex !important;
  align-items: flex-start !important;
  gap: 0.75rem !important;
  padding: 0.5rem 0 !important;
}

.inlineCheckbox input[type="checkbox"] {
  margin-top: 0.25rem !important;
  cursor: pointer !important;
  width: 18px !important;
  height: 18px !important;
  flex-shrink: 0 !important;
}

.inlineCheckbox label {
  color: rgba(255, 255, 255, 0.8) !important;
  font-size: 0.9rem !important;
  line-height: 1.5 !important;
  cursor: pointer !important;
}

.footerButtons {
  display: flex !important;
  gap: 1rem !important;
}

.footerButton {
  flex: 1 !important;
  padding: 0.875rem 1.5rem !important;
  border: none !important;
  border-radius: 10px !important;
  font-size: 1rem !important;
  font-weight: 600 !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 0.5rem !important;
}

.cancelButton {
  background: transparent !important;
  border: 1.5px solid rgba(255, 255, 255, 0.2) !important;
  color: rgba(255, 255, 255, 0.7) !important;
}

.cancelButton:hover {
  border-color: rgba(255, 255, 255, 0.4) !important;
  color: var(--primary-text-color) !important;
  background: rgba(255, 255, 255, 0.05) !important;
}

.authorizeButton {
  background: linear-gradient(135deg, #f97316 0%, #3b82f6 100%) !important;
  color: white !important;
  box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3) !important;
  border: none !important;
}

.authorizeButton:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 6px 20px rgba(249, 115, 22, 0.4) !important;
}

.authorizeButton:active {
  transform: translateY(0) !important;
}

.authorizeButton:disabled {
  opacity: 0.5 !important;
  cursor: not-allowed !important;
}

.authorizeButton:disabled:hover {
  transform: none !important;
  box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3) !important;
}
